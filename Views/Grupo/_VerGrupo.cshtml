@model WebReto.ViewModels.GrupoViewModel

<h2 class="maintitle">@ViewBag.Titulo</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@* <h2 class="maintitle">@titulo</h2> *@
@* <h4 class="maintitle">Catalogo para Administrar Alumnos</h4> *@
<div class="container">
    <a asp-action="Guardar" asp-controller="Alumno" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-plus"> Crear Nuevo Alumno  </i></a>
    <div class="table">
        <table class="bg-secondor">
            <thead>
                <tr class="bg-second">
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Edad</th>
                    <th>Grado</th>
                    <th>Grupo</th>
                    <th colspan="2" style="text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Alumnos)
                {
                    <tr>
                        <td> @item.IdAlumno </td>
                        <td> @item.Nombre </td>
                        <td> @item.ApPaterno </td>
                        <td> @item.ApMaterno </td>
                        <td> @item.Edad </td>
                        <td> @item.Grado </td>
                        <td> @item.Grupo </td>
                        <td><a asp-action="Editar" asp-controller="Alumno" class="btn btn-sm btn-warning " asp-route-idAlumno="@item.IdAlumno"> <i class="bi bi-pencil-square"></i> Actualizar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Alumno" class="btn btn-sm btn-danger" asp-route-idAlumno="@item.IdAlumno"> <i class="bi bi-cloud-minus"> </i> Eliminar </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container">
    <a asp-action="Guardar" asp-controller="Profesor" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-plus"> Crear Nuevo Profesor  </i></a>
    <div class="table">
        <table class="bg-secondor">
            <thead>
                <tr class="bg-second">
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Edad</th>
                    <th>Telefono</th>
                    <th>Email</th>
                    <th>Asignatura Impartida</th>
                    <th colspan="2" style="text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Profesores)
                {
                    <tr>
                        <td> @item.IdProfesor </td>
                        <td> @item.Nombre </td>
                        <td> @item.ApPaterno </td>
                        <td> @item.ApMaterno </td>
                        <td> @item.Edad </td>
                        <td> @item.Telefono </td>
                        <td> @item.Email </td>
                        <td> @item.AsignaturaActual </td>
                        <td><a asp-action="Editar" asp-controller="Profesor" class="btn btn-sm btn-warning " asp-route-idProfesor="@item.IdProfesor"> <i class="bi bi-pencil-square"></i> Actualizar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Profesor" class="btn btn-sm btn-danger" asp-route-idProfesor="@item.IdProfesor"> <i class="bi bi-cloud-minus"> </i> Eliminar </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>