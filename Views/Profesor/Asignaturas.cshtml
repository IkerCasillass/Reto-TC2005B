@{
    ViewData["Title"] = "Asignaturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2 class="maintitle">Listado de Asignaturas impartidas por profesor</h2>
@* <h4 class="maintitle">Catalogo para Administrar Profesors</h4> *@
<div class="container principal">
    
    <div class="table">
        <table class="center-table">
            <thead>
                <tr>
                    <td colspan="1"><a asp-action="NuevaAsignatura" asp-controller="Profesor" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-plus"> Agregar asignatura  </i></a></td>
                </tr>
                <tr class="bg-second">

                    <th>Nombre</th>
                    <th>Grupo</th>
                 
                </tr>
            </thead>
            <tbody class="bg-secondor">
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Nombre </td>
                        <td> @item.Grupo </td>

@*                         <td><a asp-action="Editar" asp-controller="Profesor" class="btn btn-sm btn-warning " asp-route-idProfesor="@item.IdProfesor"> <i class="bi bi-pencil-square"></i> Actualizar</a></td>
                        <td><a asp-action="Editar" asp-controller="Profesor" class="btn btn-sm btn-info " asp-route-idProfesor="@item.IdProfesor"> <i class="bi bi-plus-square"></i> Asignatura</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Profesor" class="btn btn-sm btn-danger" asp-route-idProfesor="@item.IdProfesor"> <i class="bi bi-cloud-minus"> </i> Eliminar </a></td> *@
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="1"><<a asp-action="Listar" class="btn btn-primary">    Volver   </a></td>
                </tr>
            </tfoot>
            
        </table>
        <br />
        <div>
            
        </div>
        
    </div>
</div>