@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2 class="maintitle">Listado de Alumnos</h2>
@* <h4 class="maintitle">Catalogo para Administrar Alumnos</h4> *@
<div class="container">
    <a asp-action="Guardar" asp-controller="Alumno" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-plus"> Crear Nuevo Cliente  </i></a>
    <div class="table">
        <table class="bg-secondor">
            <thead>
                <tr class="bg-second">
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Edad</th>
                    <th>Grado</th>
                    <th colspan="2" style="text-align: center;" >Acciones</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.IdAlumno </td>
                        <td> @item.Nombre </td>
                        <td> @item.ApPaterno </td>
                        <td> @item.ApMaterno </td>
                        <td> @item.Edad </td>
                        <td> @item.Grado </td>
                        <td><a asp-action="Editar" asp-controller="Alumno" class="btn btn-sm btn-warning " asp-route-idCliente="@item.IdAlumno"> <i class="bi bi-pencil-square"></i> Actualizar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Alumno" class="btn btn-sm btn-danger" asp-route-idCliente="@item.IdAlumno"> <i class="bi bi-cloud-minus"> </i> Eliminar </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>